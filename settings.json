{
  "window.commandCenter": false,
  "window.menuBarVisibility": "toggle",

  "editor.tabSize": 2,
  "editor.fontSize": 16,
  "editor.lineHeight": 26,
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.semanticHighlighting.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": "always",
  "editor.guides.bracketPairs": "active",
  "editor.scrollbar.vertical": "auto",
  "editor.renderLineHighlight": "gutter",
  "editor.minimap.enabled": false,
  "editor.minimap.size": "fit",
  "editor.suggestSelection": "first",
  "editor.linkedEditing": true,
  "editor.unicodeHighlight.allowedLocales": {
    "pt-BR": true
  },

  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Omni",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 5,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": true,
  "workbench.layoutControl.enabled": false,

  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "off",
  "breadcrumbs.icons": true,

  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": ".eslint*, .prettier*, tsconfig*, vite*, pnpm-*, nest*, package-lock*",
    "tailwind.config.*": "tailwind.config*, postcss.config*"
  },
  "explorer.sortOrder": "foldersNestsFiles",

  "terminal.integrated.fontSize": 15,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.enableMultiLinePasteWarning": "auto",
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.env.windows": {},
  "terminal.integrated.env.linux": {},

  "git.openRepositoryInParentFolders": "always",

  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.pullRequests.enabled": false,
  "gitlens.currentLine.scrollable": false,
  "gitlens.hovers.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  "zenMode.hideLineNumbers": false,
  "zenMode.centerLayout": false,
  "zenMode.hideActivityBar": true,
  "zenMode.hideStatusBar": true,
  "zenMode.showTabs": "single",

  "diffEditor.ignoreTrimWhitespace": false,

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "never",
    "source.sortMembers": "never"
  },

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 300,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.vscode": false,
    "**/node_modules": false
  },
  "files.associations": {
    ".sequelizerc": "javascript",
    ".stylelintrc": "json",
    ".prettierrc": "json",
    ".env*": "dotenv",
    "*.code-snippets": "json",
    "*.tsx": "typescriptreact",
    "*.css": "tailwindcss"
  },

  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },

  "javascript.format.enable": true,
  "javascript.preferences.quoteStyle": "single",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.inlayHints.parameterNames.enabled": "none",
  "javascript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "javascript.format.semicolons": "remove",
  "javascript.preferences.importModuleSpecifier": "shortest",
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "javascript.preferences.jsxAttributeCompletionStyle": "braces",

  "typescript.format.enable": true,
  "typescript.preferences.quoteStyle": "single",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "typescript.format.semicolons": "remove",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.preferences.jsxAttributeCompletionStyle": "braces",

  "prettier.requireConfig": false,
  "prettier.bracketSpacing": true,
  "prettier.bracketSameLine": false,
  "prettier.arrowParens": "avoid",
  "prettier.endOfLine": "lf",
  "prettier.semi": false,
  "prettier.useTabs": false,
  "prettier.singleQuote": true,
  "prettier.quoteProps": "as-needed",
  "prettier.printWidth": 80,
  "prettier.trailingComma": "all",
  "prettier.jsxSingleQuote": false,
  "prettier.singleAttributePerLine": false,

  "biome.enabled": false,

  "emmet.syntaxProfiles": { "javascript": "jsx" },
  "emmet.includeLanguages": { "javascript": "javascriptreact" },

  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "react",
    "typescriptreact"
  ],

  "tailwindCSS.experimental.classRegex": [
    ["(?:cn,clsx,twMerge)\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"],
    ["tv\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"],
    [
      "(?:class|className)\\s*:\\s*[\"'`]([^\"'`]*)[\"'`]",
      "(?:class|className)\\s*:\\s*[\"'`]([^\"'`]*)[\"'`]"
    ]
  ],

  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.folders.color": "#6633cc",
  "material-icon-theme.folders.associations": {
    "application": "api",
    "express": "routes",
    "protocols": "interface",
    "composers": "components",
    "strategy": "context",
    "factory": "generator",
    "adapters": "plugin",
    "slide": "svelte",
    "main": "core",
    "infra": "app",
    "presentation": "api",
    "entities": "class",
    "domain": "class",
    "schemas": "class",
    "typeorm": "database",
    "repositories": "mappings",
    "http": "container",
    "migrations": "tools",
    "modules": "components",
    "implementations": "core",
    "dtos": "typescript",
    "fakes": "mock",
    "websockets": "pipe",
    "protos": "pipe",
    "grpc": "pipe",
    "providers": "include",
    "subscribers": "messages",
    "useCases": "controller",
    "kafka": "supabase",
    "mappers": "meta",
    "_shared": "shared",
    "eslint-config": "tools",
    "kube": "kubernetes",
    "nginx": "terraform",
    "internals": "app",
    "third_party": "other",
    "chglog": "changesets"
  },
  "material-icon-theme.files.associations": {
    "vitest.config.ts": "vite",
    "ormconfig.json": "database",
    "*.proto": "3d",
    "*.webpack.js": "webpack",
    "*.build.tsx": "svgo",
    "*.bench.ts": "test-ts"
  },
  "material-icon-theme.languages.associations": {
    "dotenv": "tune"
  },

  "cSpell.language": "en,pt",
  "cSpell.enableFiletypes": [
    "!asciidoc",
    "!c",
    "!cpp",
    "!csharp",
    "!go",
    "!handlebars",
    "!haskell",
    "!jade",
    "!java",
    "!latex",
    "!php",
    "!pug",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scala",
    "!scss"
  ],
  "cSpell.userWords": [
    "acad",
    "authy",
    "autofocus",
    "brazilian",
    "chakra",
    "clsx",
    "contentist",
    "Contentist",
    "contentists",
    "cread",
    "Cread",
    "decrypter",
    "Disableable",
    "dtos",
    "ecommerce",
    "Ecommerce",
    "encrypter",
    "Encrypter",
    "esports",
    "fastify",
    "ftec",
    "Ftec",
    "gmail",
    "Graduacao",
    "hasher",
    "inferations",
    "jetbrains",
    "lcov",
    "malabi",
    "microservices",
    "middlewares",
    "mockdate",
    "noreferrer",
    "pomodoro",
    "postgres",
    "prefetch",
    "Procs",
    "rbru",
    "rocketseat",
    "spotify",
    "Streamable",
    "suts",
    "testid",
    "ungroup",
    "uniftec",
    "Untypeable",
    "upsert",
    "usecases",
    "whatsapp",
    "yoda",
    "youtube"
  ],

  "security.workspace.trust.untrustedFiles": "newWindow",
  "console-ninja.featureSet": "Community",
  "go.toolsManagement.autoUpdate": true,

  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "opacity": 1
  },
  "apc.header": {
    "height": 32
  },
  "apc.stylesheet": {
    ".editor-actions": "display: none"
  }
}
